{
  "name": "PHP",
  "displayName": "PHP",
  "fileExtensions": [".php", ".php3", ".php4", ".php5", ".phtml", ".inc"],
  "colors": {
    "keywords": "#0000FF",
    "strings": "#A31515",
    "comments": "#008000",
    "numbers": "#FF8C00",
    "functions": "#00008B",
    "classes": "#800080",
    "operators": "#8B0000",
    "preprocessor": "#808080",
    "variables": "#2E8B57",
    "constants": "#8B008B",
    "superglobals": "#FF6347",
    "html": "#800080"
  },
  "styles": {
    "keywords": {
      "bold": true,
      "italic": false
    },
    "strings": {
      "bold": false,
      "italic": false
    },
    "comments": {
      "bold": false,
      "italic": true
    },
    "numbers": {
      "bold": false,
      "italic": false
    },
    "functions": {
      "bold": true,
      "italic": false
    },
    "classes": {
      "bold": true,
      "italic": false
    },
    "operators": {
      "bold": false,
      "italic": false
    },
    "preprocessor": {
      "bold": true,
      "italic": false
    },
    "variables": {
      "bold": false,
      "italic": false
    },
    "constants": {
      "bold": true,
      "italic": false
    },
    "superglobals": {
      "bold": true,
      "italic": false
    },
    "html": {
      "bold": false,
      "italic": false
    }
  },
  "patterns": {
    "keywords": [
      "\\b(abstract|and|array|as|break|callable|case|catch|class|clone|const|continue|declare|default|die|do|echo|else|elseif|empty|enddeclare|endfor|endforeach|endif|endswitch|endwhile|eval|exit|extends|final|finally|for|foreach|function|global|goto|if|implements|include|include_once|instanceof|insteadof|interface|isset|list|namespace|new|or|print|private|protected|public|require|require_once|return|static|switch|throw|trait|try|unset|use|var|while|xor|yield|from)\\b"
    ],
    "variables": [
      "\\$[a-zA-Z_][a-zA-Z0-9_]*"
    ],
    "superglobals": [
      "\\$(_GET|_POST|_REQUEST|_SESSION|_COOKIE|_SERVER|_ENV|_FILES|GLOBALS)\\b"
    ],
    "constants": [
      "\\b(true|false|null|TRUE|FALSE|NULL)\\b",
      "\\b[A-Z_][A-Z0-9_]*\\b",
      "\\b__(CLASS__|DIR__|FILE__|FUNCTION__|LINE__|METHOD__|NAMESPACE__|TRAIT__)__\\b"
    ],
    "functions": [
      "\\bfunction\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
    ],
    "classes": [
      "\\bclass\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "\\binterface\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "\\btrait\\s+([a-zA-Z_][a-zA-Z0-9_]*)"
    ],
    "strings": [
      "\"[^\"\\\\]*(\\\\.[^\"\\\\]*)*\"",
      "'[^'\\\\]*(\\\\.[^'\\\\]*)*'",
      "<<<['\"]?([A-Za-z_][A-Za-z0-9_]*)['\"]?[\\s\\S]*?^\\1;?$"
    ],
    "comments": [
      "//[^\\n]*",
      "#[^\\n]*"
    ],
    "numbers": [
      "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?[fFlL]?\\b",
      "\\b0x[0-9a-fA-F]+\\b",
      "\\b0b[01]+\\b",
      "\\b0[0-7]+\\b"
    ],
    "operators": [
      "[+\\-*/=<>!&|^~%]",
      "\\+=|-=|\\*=|/=|%=|\\.=|&=|\\|=|\\^=|<<=|>>=",
      "\\+\\+|--|&&|\\|\\||==|!=|===|!==|<=|>=|<>|<<|>>|<=>",
      "=>|->|::|\\?\\?|\\.\\.\\."
    ],
    "preprocessor": [
      "<\\?php\\b",
      "<\\?=",
      "<\\?",
      "\\?>"
    ],
    "html": [
      "<[^>]*>",
      "&[a-zA-Z0-9]+;"
    ]
  },
  "multilineComments": {
    "start": "/*",
    "end": "*/"
  }
}