{
  "name": "HTML",
  "displayName": "HTML",
  "fileExtensions": [".html", ".htm", ".xhtml"],
  "colors": {
    "keywords": "#0000FF",
    "strings": "#A31515",
    "comments": "#008000",
    "numbers": "#FF8C00",
    "functions": "#00008B",
    "classes": "#800080",
    "operators": "#8B0000",
    "preprocessor": "#808080",
    "htmlTags": "#0000FF",
    "htmlAttributes": "#FF0000",
    "htmlValues": "#A31515"
  },
  "styles": {
    "keywords": {
      "bold": true,
      "italic": false
    },
    "strings": {
      "bold": false,
      "italic": false
    },
    "comments": {
      "bold": false,
      "italic": true
    },
    "htmlTags": {
      "bold": true,
      "italic": false
    },
    "htmlAttributes": {
      "bold": false,
      "italic": false
    },
    "htmlValues": {
      "bold": false,
      "italic": false
    }
  },
  "patterns": {
    "htmlTags": [
      "<[!?/]?\\b[A-Za-z0-9-]+(?:\\s|>|/>)"
    ],
    "htmlAttributes": [
      "\\b[A-Za-z0-9-]+(?=\\s*=)"
    ],
    "htmlValues": [
      "\"[^\"]*\"",
      "'[^']*'"
    ],
    "comments": [
      "<!--[\\s\\S]*?-->"
    ]
  },
  "multilineComments": {
    "start": "<!--",
    "end": "-->"
  }
}